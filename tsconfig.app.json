{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "strict": true, // Включает строгую типизацию
    "noUnusedLocals": true, // Ошибка, если есть неиспользуемые переменные
    "noUnusedParameters": true, // Ошибка, если есть неиспользуемые параметры функций
    "noFallthroughCasesInSwitch": true, // Ошибка, если case "проваливается"
    "noUncheckedIndexedAccess": true, // Проверка доступа по индексам
    "types": [
      "vite/client"
    ], // Типы для Vite
    "incremental": true, // Включает ускоренную компиляцию TS
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".", // Для работы алиасов
    "paths": {
      "@/*": [
        "src/*"
      ] // Алиас @ → src
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ]
}